<Window x:Class="zhihu_preserver.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:zhihu_preserver"
		xmlns:p="clr-namespace:zhihu_preserver.Properties"
		mc:Ignorable="d"
		Title="Console" Height="720" Width="1280">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Menu Grid.Row="0">
			<MenuItem Header="{x:Static p:Resources.Program}">
				<MenuItem Header="{x:Static p:Resources.Multiboxing}"/>
				<Separator/>
				<MenuItem Header="{x:Static p:Resources.Exit}"/>
			</MenuItem>
			<MenuItem Header="{x:Static p:Resources.Task}">
				<MenuItem Header="{x:Static p:Resources.NewBrowserWindow}" Click="Menu_Edit_New_Browser_Window_Click"/>
				<Separator/>
			</MenuItem>
			<MenuItem Header="{x:Static p:Resources.Help}">
				<MenuItem Header="{x:Static p:Resources.Document}"/>
				<Separator/>
				<MenuItem Header="{x:Static p:Resources.About}"/>
			</MenuItem>
		</Menu>
		<StatusBar Grid.Row="2">
			<StatusBarItem Content="{x:Static p:Resources.Ready}"/>
		</StatusBar>
	</Grid>
</Window>
